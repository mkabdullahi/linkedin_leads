# LinkedIn Automation Environment Configuration
# Copy this file to .env and fill in your actual values

# Groq API Configuration (Required)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# LinkedIn Authentication (Required)
# Extract cookies from your browser and format as JSON string
# See config/linkedin_cookies.json.example for format
LI_COOKIES={"li_at":"your_li_at_cookie","JSESSIONID":"your_jsessionid_cookie","bscookie":"your_bscookie"}

# Optional Configuration
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Maximum connection requests per session (LinkedIn limit: 9-10)
MAX_REQUESTS=9

# Delay between requests in seconds (recommended: 30-120)
DELAY_BETWEEN_REQUESTS=60

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Retry attempts for failed requests
MAX_RETRY_ATTEMPTS=3

# Browser configuration
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=60000

# AI Message Generation
AI_MODEL=llama-3.1-8b-instant
AI_TEMPERATURE=0.2
AI_MAX_TOKENS=300

# Rate limiting protection
ENABLE_RATE_LIMITING=true
SESSION_REFRESH_INTERVAL=3600

# Fallback settings
ENABLE_FALLBACK_TEMPLATES=true
FALLBACK_MESSAGE_LENGTH=300